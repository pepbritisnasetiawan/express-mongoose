<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Detail Garment</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            line-height: 1.6;
            margin: 0;
            padding: 20px;
            background-color: #f4f4f4;
        }
        .alert {
            padding: 15px;
            margin-bottom: 20px;
            border: 1px solid transparent;
            border-radius: 4px;
        }
        .alert-success {
            color: #155724;
            background-color: #d4edda;
            border-color: #c3e6cb;
        }
        .alert-danger {
            color: #721c24;
            background-color: #f8d7da;
            border-color: #f5c6cb;
        }
    </style>
  </head>
  <body>
    <% if(success_msg && success_msg.length > 0) { %>
        <div class="alert alert-success">
            <%= success_msg %>
        </div>
    <% } %>

    <% if(error_msg && error_msg.length > 0) { %>
        <div class="alert alert-danger">
            <%= error_msg %>
        </div>
    <% } %>
    <h1><%= garment.name %></h1>
    <ul>
      <li>Location: <%= garment.location %></li>
      <li>Kontak: <%= garment.contact %></li>
    </ul>

    <h2>Products</h2>
    <ul>
      <% for(let product of garment.products) { %>
      <li>
        <a href="/products/<%= product._id %>"
          ><%= product.name %> - <%= product.brand %></a
        >
      </li>
      <% } %>
    </ul>

    <a href="/garments">All Garments</a>
    <a href="/garments/<%= garment._id %>/edit">Edit</a>
    <form action="/garments/<%= garment._id %>?_method=DELETE" method="post">
      <button type="submit">Delete</button>
    </form>
    <a href="/garments/<%= garment._id %>/products/create">Add Product</a>
  </body>
</html>
